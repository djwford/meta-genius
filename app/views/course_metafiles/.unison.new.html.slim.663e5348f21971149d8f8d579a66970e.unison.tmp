div.row
  = link_to "Go Back", '/', {id: "back_button", class: "two columns"} 
div id="form_container" 
  h1.row Enter Course Info Here
  = simple_form_for @metafile, html: {class: '' } do |f| 
    div.row
      div.five.columns
        = f.label "Author"
        = f.input :author, 
                  input_html: {class: "u-full-width six columns", id: "author"}, 
                  label: false
    div.row
      div.six.columns
        = f.label "Course Title" 
        = f.input :title, label: false,
                  input_html: {id: "courseTitle", class: "u-full-width"}
      div.six.columns
        = f.label "Course ID"
        = f.input :course_id,
          label: false,
          input_html: { id: "courseID",
                        class:  "u-full-width",
                        placeholder: "sample-course-id",
                        data: { ot: "Your Course ID is on your Statement of Work."\
                                    " It is the simplified, lowercase, and dash-separated "\
                                    "version of your course title that you have been using "\
                                    "to name your video clips."}} 

    div.row
      div.six.columns
        - link = link_to image_tag("help.svg", size: "19"), 
          "https://authors.pluralsight.com/writing-course-descriptions/",
          target: 'blank',
          data: { ot: "Click here for more information about writing course descriptions"},
          width: "19px", height: "19px"
        = f.label "Short Description #{link.html_safe}"

        = f.input :short_description,
                  as: :text,
                  input_html: {class: "u-full-width"},
                  label: false

      div.six.columns
        = f.label "Description"
        = f.input :description, 
                  as: :text,
                  input_html: { id: 'course_desc_tip',
                                class: "u-full-width"},
                  label: false
                              
                  
    div.course_link.row
      div.six.columns
        = link_to 'Click here for more information about writing course descriptions',
          'https://authors.pluralsight.com/writing-course-descriptions/', 
        target: 'blank'
      br
      br
    div.row
      div.four.columns
        = f.label "Required Software"
        = f.input :software_required, label: false,
                  input_html: { data: { ot: "Please list the software required to"\
                                            "follow along with the demos in this course,"\
                                            "including the latest revision numbers"\
                                            "(e.g. maya-2015, photoshop-cc-2015)." },
                                class: 'u-full-width'}
      div.two.columns
        = f.label "Module Count"
        = f.input :module_count,
                  label: false,
                  input_html: { id: "moduleCount",
                                min: "1",
                                value: "1" },
                  data: { ot: "NOT including the course preview." }
    div.row
      div.six.columns
        p 
          |
            In the following section, please provide faceted tags to help 
            users find your course through the browse/filter experience.
            Hover over each input box to see a short description of the facet. 
            For the sake of limiting the number of tags in the browse experience, 
            please only use tags that currently exist in the system. If you don't 
            see a tag on the following list that you feel is necessary to add to 
            your course, please notify your editor and they will review. 
        p
          = link_to 'Click here to see a list of active tags', 
            'https://docs.google.com/spreadsheets/d/18V2q7ijmt1ilQIhznnCRd2ReQdk_Q0sINd02U14WYZw/edit?usp=sharing', 
            target: 'blank' 
    div.row
      div.six.columns
        = f.label "Audience"
        = f.input :audience_tags,
          label: false,
          collection: [ 'architecture-construction',
                        'business-professional',
                        'creative-professional',
                        'data-professional',
                        'it-ops',
                        'manufacturing-design',
                        'software-development' ],
          selected: "creative-professional",
          input_html: { data: { ot: "This tag answers the question,"\
                                    "'Who is this course designed for?'"\
                                    "Pick the tag that best describes"\
                                    "the course's target audience.",
                                placeholder: "Choose an Audience" }}
    div.row
      div.six.columns
        = f.label "Topics"
        = f.input :topics_list, 
          collection: @topics, 
          label: false,
          input_html: { placeholder: "A comma-separated list of topics",
                        class: "chosen-select u-full-width",
                        multiple: true,
                        data: { ot: "Complete the sentence,"\
                                "'This course is about ______.' Include"\
                                "one or a handful of topics. For example,"\
                                "a course about configuring VMware"\
                                "vSphere 6 should include tags"\
                                "for vmware-vsphere and virtualization."\
                                "Try to be as specific and comprehensive as"\
                                "possible when tagging this course."}}
    div.row
      div.six.columns
        = f.label "Tools"
        = f.input :tools_tags,
          collection: @tools,
          label: false,
          input_html: { rows: 5,
                        cols: 20,
                        class: "chosen-select u-full-width",
                        multiple: true,
                        placeholder: "A comma-separated list of tools",
                        data: { ot: "Tools tags identify the tools and technology "\
                                    "used in the course. Use as many of these as "\
                                    "necessary to be comprehensive. Please use "\
                                    "generic tool tags (examples: windows-server, "\
                                    "photoshop, visual-studio) as well as the specific version"\
                                    " used in the course (examples: windows-server-2012, "\
                                    "windows-server-2012-r2, photoshop-cc-2015, "\
                                    "visual-studio-2015)."}}

    div.row
      div.six.columns
        = f.label "Certification(s)"
        = f.input :certification_tags,
          collection: @certifications,    
          label: false,
          placeholder: "A comma-separated list of certification details (if relevant)",
          input_html: { rows: 5,
                        cols: 20,
                        multiple: true,   
                        class: "chosen-select u-full-width",                                   
                        data: { ot: "If the course prepares the viewer for a "\
                                    "certification exam, Please use the tags for: "\
                                    "exam number, exam name, certification"\
                                    "vendor (microsoft, comptia)."}}                      
    div.row
      div.six.columns
        = f.label "Additional Keywords"
        = f.input :topics_tags, 
          label: false,
          input_html: { placeholder: "A comma-separated list",
                        class: "u-full-width",
                        data: { ot: "Provide any additional keywords relevant to"\
                                    "your course, such as the subject of your example "\
                                    "scenario(s)."}}
    div id="suggestion_container"    
      = f.simple_fields_for :suggested_tags do |ff|
          div.suggested_input
            p id="close_button" x
            = ff.input :name  
            = ff.input :description 
            = ff.input :tag_type, collection: ["tool", "certification", "topic"]  
      p id="suggest_button" suggest a tag                        
    = f.button :submit
